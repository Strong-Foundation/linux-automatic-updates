# Use the latest almalinux as the base image
FROM almalinux:latest

# Set the working directory inside the container
WORKDIR /app

# Update package lists and install necessary dependencies
RUN yum update -y && yum install bash curl sudo -y --allowerasing

# Copy the script into the container
COPY linux-automatic-updates.sh /app/linux-automatic-updates.sh

# Grant execution permissions to the script
RUN chmod +x /app/linux-automatic-updates.sh

# Execute the script during build
RUN /bin/bash /app/linux-automatic-updates.sh --install
